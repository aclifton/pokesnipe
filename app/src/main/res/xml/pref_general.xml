<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="40.701339,-74.0282637,40.80042,-73.9268037"
        android:inputType="textNoSuggestions"
        android:key="bbox"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_bbox" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue=""
        android:inputType="textNoSuggestions"
        android:key="filter"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_filter" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="reverse"
        android:title="@string/pref_title_reverse" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_sort_titles"
        android:entryValues="@array/pref_sort_values"
        android:key="sort"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sort" />
</PreferenceScreen>
